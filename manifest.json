{
    "manifest_version": 3,
    "name": "Chess Blocker",
    "version": "1.1",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://api.chess.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.chess.com/*",  "https://www.lichess.org/*", "https://lichess.org/*", "https://www.chess24.com/*", "https://chess24.com/"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_icon": "knook.png",
        "default_popup": "options.html"
    },
    "options_page": "options.html"
}
